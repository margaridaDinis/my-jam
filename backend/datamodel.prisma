enum Permission {
  ADMIN
  USER
  ALBUMCREATE
  ALBUMUPDATE
  ALBUMDELETE
  PERMISSIONUPDATE
}

enum ALBUM_TYPE {
  CD
  LP
  CASSETE
}

type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: String
  permissions: [Permission] @scalarList(strategy: RELATION)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Album {
  id: ID! @id
  year: Int
  name: String!
  description: String
  image: String!
  largeImage: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  location: Location,
  genres: [Genre!]!
  artists: [Artist]!
  type: ALBUM_TYPE
  user: User!
}

type Genre {
  id: ID! @id,
  name: String!,
  albums: [Album],
}

type Artist {
  id: ID! @id,
  name: String!,
  albums: [Album],
}

type Location {
  id: ID! @id,
  name: String!,
  description: String,
  albums: [Album],
}
