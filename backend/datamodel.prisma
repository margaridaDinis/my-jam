enum Permission {
  ADMIN
  USER
  ALBUMCREATE
  ALBUMUPDATE
  ALBUMDELETE
  PERMISSIONUPDATE
}

type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: String
  permissions: [Permission] @scalarList(strategy: RELATION)
  cart: [CartItem!]!
}

type Album {
  id: ID! @id
  year: Int
  name: String!
  description: String
  image: String!
  largeImage: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
#  genres: [list of genres]
#  artists: [Artist]!
#  type: [one of "album" , "single" , or "compilation"]!
  user: User!
}

type CartItem {
  id: ID! @id
  quantity: Int! @default(value: 1)
  item: Album!
  user: User!
}
