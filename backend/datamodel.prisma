enum Permission {
  ADMIN
  USER
  ALBUMCREATE
  ALBUMUPDATE
  ALBUMDELETE
  PERMISSIONUPDATE
}

type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: String
  permissions: [Permission] @scalarList(strategy: RELATION)
}

type Album {
  id: ID! @id
  year: Int
  name: String!
  description: String
  image: String!
  largeImage: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  genres: [Genre!]!
  artists: [Artist]!
  #  type: [one of "album" , "single" , or "compilation"]!
  user: User!
}

type Genre {
  id: ID! @id,
  name: String,
  albums: [Album],
}

type Artist {
  id: ID! @id,
  name: String,
  albums: [Album],
}
